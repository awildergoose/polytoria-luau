{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "LuaU-LSP Documentation Schema",
    "type": "object",
    "additionalProperties": {
        "type": "object",
        "properties": {
            "documentation": {
                "type": "string"
            },
            "params": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "documentation": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "name",
                        "documentation"
                    ],
                    "additionalProperties": false
                }
            },
            "returns": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "keys": {
                "type": "object",
                "additionalProperties": {
                    "type": "string"
                }
            },
            "learn_more_link": {
                "type": "string",
                "format": "uri"
            },
            "code_sample": {
                "type": "string"
            }
        },
        "required": [
            "documentation"
        ],
        "additionalProperties": false
    }
}